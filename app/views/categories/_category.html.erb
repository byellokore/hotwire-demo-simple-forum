<div id="<%= dom_id(category) %>" class="<%= category.discussions_count&.positive? ? "d-flex" : "d-none" %> align-items-start justify-content-between">
    <h4><%= link_to category.name, category_discussions_path(category) %></h4>
    <span class="badge badge-warning text-danger"><%= category.discussions_count if category.discussions_count&.positive? %></span>
</div>